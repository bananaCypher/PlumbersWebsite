<% if @details['name'] %>
  <p>Dear <%= @details['name'] %>,<br><br>
  Thank you for contacting us with regards to <%= @details['service'] %>'s.  We will contact you back on <%= @details['contact'] %> as soon as possible.<br><br>
  Regards<br>
  CodePlumbing</p>
<% else %>
  <form class="contact" action="/contact_us" method="get">
    <h2>Contact Us</h2>
    <label for="name">Name: </label>
    <input type="text" name="name">
    <br>
    <label for="service">Service of interest: </label>
    <select name="service">
      <option>Toilet</option>
      <option>Tap</option>
      <option>Shower</option>
      <option>Bath</option>
    </select>
    <br>
    <label for="contact">E-mail Address: </label>
    <input type="text" name="contact">
    <br>
    <button>Submit</button>
  </form>
<% end %>